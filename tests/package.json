{
  "name": "@gameboilerplate/tests",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "test": "jest --config=config/jest.config.js --passWithNoTests",
    "test:unit": "jest --config=config/jest.unit.config.js",
    "test:integration": "jest --config=config/jest.integration.config.js",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --config=config/jest.config.js --watch",
    "test:coverage": "jest --config=config/jest.config.js --coverage",
    "test:admin": "jest --config=config/jest.integration.config.js --testPathPatterns=admin",
    "test:shared": "jest --config=config/jest.unit.config.js --testPathPatterns=shared",
    "test:shared:coverage": "jest --config=config/jest.unit.config.js --testPathPatterns=shared --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/pngjs": "^6.0.5",
    "babel-jest": "^30.0.5",
    "jest": "^30.0.5",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.54.1",
    "pngjs": "^7.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.6",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
