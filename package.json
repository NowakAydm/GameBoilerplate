{
  "name": "gameboilerplate",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*",
    "tests"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.4.2",
    "socket.io-client": "^4.8.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build": "npx turbo run build",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "format": "prettier --write .",
    "prepare": "husky",
    "test": "npm run test --workspace=tests",
    "test:unit": "npm run test:unit --workspace=tests",
    "test:unit:only": "npm run test:unit:only --workspace=tests",
    "test:unit:shared": "npm run test:unit:shared --workspace=tests",
    "test:unit:engine": "npm run test:unit:engine --workspace=tests",
    "test:admin": "cd tests && node run-all-tests.js",
    "test:admin:dashboard": "cd tests && node run-all-tests.js dashboard",
    "test:admin:charts": "cd tests && node run-all-tests.js charts",
    "test:admin:users": "cd tests && node run-all-tests.js users",
    "test:admin:metrics": "cd tests && node run-all-tests.js metrics",
    "test:admin:routes": "cd tests && node run-all-tests.js routes",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:admin": "npm run dev --workspace=packages/admin",
    "dev": "npx turbo run dev"
  },
  "dependencies": {
    "test": "^3.3.0"
  }
}
